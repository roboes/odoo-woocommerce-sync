<?xml version="1.0"?>
<odoo>
  <record id="view_product_product_tree_woocommerce" model="ir.ui.view">
    <field name="name">product.product.tree.woocommerce</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_product_tree_view"/>
    <field name="arch" type="xml">
      <xpath expr="//tree" position="inside">
        <field name="woocommerce_product_variation_site_url" optional="show"/>
        <field name="woocommerce_product_variation_id" optional="show"/>
        <field name="woocommerce_product_type" optional="hide"/>
        <field name="woocommerce_product_variation_status" optional="show"/>
        <field name="woocommerce_product_variation_purchasable" optional="show"/>
      </xpath>
    </field>
  </record>
</odoo>
